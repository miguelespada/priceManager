<%= form_tag randomize_prices_path do %>
  <%= label_tag("Type:") %>
  <%= select_tag :type, options_for_select(price_options) %>

  <%= label_tag("Number:") %>
  <%= select_tag :number, options_for_select((0..100).step(1).to_a.map{|s| ["#{s}", s]}) %>

  <%= label_tag("Init:") %>
 <%= text_field_tag('init_time', params[:init_time]) %>

  <%= label_tag("End:") %>
 <%= text_field_tag('end_time', params[:end_time]) %>
<br>

  <%= submit_tag("Randomize") %>
<% end %>

<script>
  $('#init_time').timepicker({
    showMeridian: false
  });
  $('#end_time').timepicker({
    showMeridian: false
  });
</script>