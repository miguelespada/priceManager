<h1>Listing prices</h1>

<%= link_to 'Next price', next_price_path %>

<%= link_to 'Delete all', delete_all_path, data: { confirm: 'Are you sure?' } %>



<%= form_tag randomize_prices_path do %>
  <%= select_tag :number, options_for_select((0..20).step(1).to_a.map{|s| ["#{s}", s]}) %>
  <%= submit_tag("Radomize") %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Enabled</th>
      <th>Time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.type %></td>
        <td><%= price.enabled %></td>
        <td><%= price.time.strftime("%H:%M:%S") %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

